@model IEnumerable<SavedPodcast>

<style>
    body {
        background-color: #ff006e;
    }

    table {
        border-collapse: initial;
        margin-left: auto;
        margin-right: auto;
        width: 75%;
    }

    td {
        background-color: white;
        border-bottom: solid 20px #b6ff00;
        border-top: solid 100px #0094ff;
        box-shadow: 1px 1px 1px #000000;
        padding: 15px;
        text-align: center;
        width: 15%;
    }

    tr td:first-child {
        border-left: solid 5px #10909A;
    }

    tr td:last-child {
        border-right: solid 2px #10909A;
    }

    tr:first-child td:first-child {
        border-top-left-radius: 4px;
    }

    tr:first-child td:last-child {
        border-top-right-radius: 4px;
    }

    tr:last-child td:first-child {
        border-bottom-left-radius: 4px;
    }

    tr:last-child td:last-child {
        border-bottom-right-radius: 4px;
    }
</style>

@using (Html.BeginForm())
{
    <p>
        Find by Description: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Search" />
    </p>
}

<p>hi, you added a favorite</p>
<table class="styled-table">

    @foreach (SavedPodcast s in Model)
    {
        <thead>
            <tr>
                <th> Name</th>
                <th>Publisher</th>
                <th>Episode Name</th>
                <th>Description</th>
                <th>Preview</th>
                <th>Image</th>
                <th>Duration</th>
                <th>Id</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td> @s.PodcastName  </td>
                <td>@s.Publisher </td>
                <td>@s.EpisodeName</td>
                <td>@s.Description</td>
                <td>@s.AudioPreviewUrl</td>
                <td><img src="@s.ImageUrl" /></td>
                <td>@s.Duration</td>
                <td>@s.Id</td>
                <td> <a asp-action="Delete" asp-route-id="@s.Id">Delete</a></td>
            </tr>
        </tbody>


    }

</table>

