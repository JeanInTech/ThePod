@model IEnumerable<SavedPodcast>

    <style>
        body {
            background-color: #00ffff;
        }

        table {
            border-collapse: separate;
            margin-left: auto;
            margin-right: auto;
            width: 50%;
        }

        td {
            background-color: white;
            border-bottom: solid 2px #10909A;
            border-top: solid 2px #10909A;
            box-shadow: 1px 1px 1px #999;
            padding: 2px;
            text-align: center;
            width: 25%;
        }

        tr td:first-child {
            border-left: solid 2px #10909A;
        }

        tr td:last-child {
            border-right: solid 2px #10909A;
        }

        tr:first-child td:first-child {
            border-top-left-radius: 10px;
        }

        tr:first-child td:last-child {
            border-top-right-radius: 10px;
        }

        tr:last-child td:first-child {
            border-bottom-left-radius: 10px;
        }

        tr:last-child td:last-child {
            border-bottom-right-radius: 10px;
        }
    </style>

<p>hi, you added a favorite</p>
<table class="styled-table">

    @foreach (SavedPodcast s in Model)
    {
        <thead>
            <tr>
                <th> Name</th>
                <th>Publisher</th>
                <th>Episode Name</th>
                <th>Description</th>
                <th>Preview</th>
                <th>Image</th>
                <th>Duration</th>
                <th>Id</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td> @s.PodcastName  </td>
                <td>@s.Publisher </td>
                <td>@s.EpisodeName</td>
                <td>@s.Description</td>
                <td>@s.AudioPreviewUrl</td>
                <td>@s.ImageUrl</td>
                <td>@s.Duration</td>
                <td>@s.Id</td>
               <td> <a asp-action="Delete" asp-route-id="@s.Id">Delete</a></td>
            </tr>
        </tbody>


    }

</table>
    <form asp-action="Delete">
        <input type="hidden" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
