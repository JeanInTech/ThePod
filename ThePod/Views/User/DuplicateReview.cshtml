@model UserFeedback

<h4 class="text-left text-capitalize" style="color: black; letter-spacing: 2px">Oops!</h4>
<div style="color: grey">
    <p>It looks like you've already rated this episode.</p>
    <p><strong>Podcast: </strong>@Model.PodcastName</p>
    <p><strong>Episode Name: </strong>@Model.EpisodeName</p>
    <img src="@Model.ImageUrl" height="200" />
    <p>Would you like to edit this review?</p>
    <form asp-controller="User" asp-action="EditReview" method="get">
        <input type="hidden" name="Id" value="@Model.Id" />
        <input type="submit" value="Yes" class="btn btn-outline-dark btn-group-lg float-lg-left" />
    </form><h2>  </h2>
    <form asp-controller="User" asp-action="ViewFeedBack" method="get">
        <input type="submit" value="No" class="btn btn-outline-dark btn-group-lg float-lg-left" />
    </form>
    </div>
