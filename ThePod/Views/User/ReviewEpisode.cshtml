@model Episode
<style type="text/css">
    @@font-face {
        font-family: 'Montserrat';
        src: url(../font/Montserrat-Regular.ttf);
        font-weight: normal;
    }

    @@font-face {
        font-family: 'MontserratBold';
        src: url(../font/Montserrat-Bold.ttf);
        font-weight: bold;
    }

    .feedbackContainer {
        border-radius: 25px;
        background-color: rgba(12, 12, 12, 0.7);
        padding: 50px;
        color: white;
    }
    .podcastimg {
        float: left;
        margin: 0 10px 0 0;
    }

    .podcastinfo {
        min-height: 375px;
    }

    .tags {
        display: flex;
        justify-content: space-between;
    }
</style>
<div class="feedbackContainer">
    <h4 class="text-left text-capitalize" style="font-family: 'MontserratBold'; color: white; letter-spacing: 2px">Write a review for: @Model.name</h4>
    <div>
        <div class="podcastimg">
            <figure class="figure">
                <a href="@Model.external_urls.spotify" alt="@Model.name" target="_blank"><img src="@Model.images[0].url" style="height: 300px;" class="figure-img" /></a>
                <audio controls style="width: 100%; align-content: start">
                    <source src="@Model.audio_preview_url" type="audio/mpeg">
                </audio>
            </figure>
        </div>
        <div class="podcastinfo">
            <p><strong>Podcast: </strong>@Model.show.name</p>
            <p><strong>Episode description: </strong>@Model.description</p>
            <p><strong>Release date: </strong>@Model.release_date</p>
            <br />
        </div>
        <form asp-controller="User" asp-action="ReviewEpisode" method="post">
            <input type="hidden" name="EpisodeId" value="@Model.id" />
            <input type="hidden" name="EpisodeName" value="@Model.name" />
            <input type="hidden" name="PodcastName" value="@Model.show.name" />
            <input type="hidden" name="Description" value="@Model.description" />
            <input type="hidden" name="AudioPreviewURL" value="@Model.audio_preview_url" />
            <input type="hidden" name="ImageUrl" value="@Model.images[0].url" />
            <input type="hidden" name="ReleaseDate" value="@Model.release_date" />
            <input type="hidden" name="ExternalURLS" value="@Model.external_urls.spotify" />
            <br>
            <div>
                <h5><strong>Rating: </strong></h5><input type="number" name="Rating" required min="1" max="5" /> /5 <br />
                <h5 style="padding-top: 20px">Tags (Select up to 3):</h5>
                <div class="tags">
                    <div style="float: left; width: 33%;">
                        <input class="single-checkbox" type="checkbox" name="Tags" value="Aliens"> Aliens<br>
                        <input class="single-checkbox" type="checkbox" name="Tags" value="Crime"> Crime<br>
                        <input class="single-checkbox" type="checkbox" name="Tags" value="Current Events"> Current Events<br>
                        <input class="single-checkbox" type="checkbox" name="Tags" value="Educational"> Educational<br>
                        <input class="single-checkbox" type="checkbox" name="Tags" value="Famous People"> Famous People<br>
                        <input class="single-checkbox" type="checkbox" name="Tags" value="Funny"> Funny <br>
                        <input class="single-checkbox" type="checkbox" name="Tags" value="Game-changing"> Game-changing<br>
                        <input class="single-checkbox" type="checkbox" name="Tags" value="Gaming"> Gaming<br>
                        <input class="single-checkbox" type="checkbox" name="Tags" value="Health"> Health<br>
                    </div>
                    <div style="float: left; width: 33%;">
                        <input class="single-checkbox" type="checkbox" name="Tags" value="Inspirational"> Inspirational<br>
                        <input class="single-checkbox" type="checkbox" name="Tags" value="Kid-Friendly"> Kid-Friendly<br>
                        <input class="single-checkbox" type="checkbox" name="Tags" value="LGBT"> LGBT+<br>
                        <input class="single-checkbox" type="checkbox" name="Tags" value="Mindblown"> Mindblown<br>
                        <input class="single-checkbox" type="checkbox" name="Tags" value="Money"> Money<br>
                        <input class="single-checkbox" type="checkbox" name="Tags" value="Multicultural"> Multicultural<br>
                        <input class="single-checkbox" type="checkbox" name="Tags" value="NSFW"> NSFW<br>
                        <input class="single-checkbox" type="checkbox" name="Tags" value="Politics"> Politics<br>
                        <input class="single-checkbox" type="checkbox" name="Tags" value="Relaxing"> Relaxing<br>
                    </div>
                    <div style="float: left; width: 33%;">
                        <input class="single-checkbox" type="checkbox" name="Tags" value="Real Life"> Real Life<br>
                        <input class="single-checkbox" type="checkbox" name="Tags" value="Rocky Moments"> Rocky Moments<br>
                        <input class="single-checkbox" type="checkbox" name="Tags" value="Storytelling"> Storytelling<br>
                        <input class="single-checkbox" type="checkbox" name="Tags" value="Spooky"> Spooky<br>
                        <input class="single-checkbox" type="checkbox" name="Tags" value="Sports"> Sports<br>
                        <input class="single-checkbox" type="checkbox" name="Tags" value="Tech"> Tech<br>
                        <input class="single-checkbox" type="checkbox" name="Tags" value="Trash-talk"> Trash-talk<br>
                        <input class="single-checkbox" type="checkbox" name="Tags" value="WTF"> WTF<br>
                    </div>
                </div>
                <br />
                <div class="form-group" style="width: 50%;">
                    <h5>Review</h5>
                    <textarea name="Review" rows="5" cols="70"></textarea><br />
                    <input type="submit" value="Review Episode" class="btn btn-light" />
                </div>
            </div>
        </form>
    </div>
</div>
