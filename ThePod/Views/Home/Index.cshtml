    @{
        List<string> uniqueEpisodeIDs = new List<string>();
    }

    <h4></h4>
    <h5>Popular Podcasts</h5>
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" style="max-width: 300px; margin: 0 auto">
        <!--Indicators-->
